{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts"
  ]
}
